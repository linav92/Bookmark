<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<div class="pb-4" id="form">
  <%= render "form", bookmark: @bookmark %>
</div>

<table class="table ">
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Categories</th>
      <th>Kinds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="bookmarks-list">
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td>
          <ul>
            <% bookmark.categories.each do |c| %>
              <li><%= c %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <ul>
            <% bookmark.kinds.each do |k| %>
              <li><%= k  %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
